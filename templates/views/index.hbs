<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerlinks}}
</head>
<body>
    <!-- for navbar(header) -->
    {{>header}}

    <!-- main body part -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-12 col-md-10 mx-auto d-md-flex align-items-center">
                <div class="col-12 col-md-6 main_header_left">
                    <p>Weather App By <span class="heading-span">Vinay</span></p>
                    <h1>Latest <span class="heading-span">Weather</span> of Your City</h1>
                    <a href="/weather">
                        <button class="btn btn-light">Check Weather</button>
                    </a>
                </div>
                <div class="col-12 col-md-6 main_header_right align-self-end">
                    <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                          <div class="carousel-item active" data-bs-interval="1000">
                            <img src="./images/wind.jpg" class="w-100 carousel-image" alt="wind">
                          </div>
                          <div class="carousel-item" data-bs-interval="1000">
                            <img src="./images/hot.jpg" class="w-100 carousel-image" alt="hot">
                          </div>
                          <div class="carousel-item" data-bs-interval="1000">
                            <img src="./images/temp.jpg" class="w-100 carousel-image" alt="temp">
                          </div>
                        </div>
                      </div>
                </div>
            </div>
        </div>  
    </div>

    <!-- footer -->
    {{>footer}}
</body>
</html>